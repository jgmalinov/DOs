@model DO;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   <form asp-action="Update" method="post">
        <div class="form-group">
            <label asp-for="@Model.Title">DO</label>
            <input asp-for="@Model.Title" value="@Model.Title"/>
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description">DO What?</label>
            <input asp-for="@Model.Description" value="@Model.Description"/>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DueDate">DO When?</label>
            <input asp-for="@Model.DueDate" value="@Model.DueDate"/>
            <span asp-validation-for="@Model.DueDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Done">DONE?</label>
            <input asp-for="@Model.Done" type="checkbox" checked="@Model.Done" />
            <span asp-validation-for="@Model.Done" class="text-danger"></span>
        </div>
        <button type="submit">Do Update</Doc></button>
   </form>
</div>