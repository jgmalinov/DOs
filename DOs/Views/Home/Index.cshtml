@model IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="container">
        <thead class="fs-4" style="border-bottom: 2px dashed black; padding-bottom: 10px;">
            <tr class="row">
                <th class="col-1">DO</th>
                <th class="col-1">DO What</th>
                <th class="col-1">DO By</th>
                <th class="col-1">Done</th>
            </tr>
        </thead>
        <tbody>
            <tr style="height: 10px;"></tr>
            @foreach(DO dO in Model._DOs)
            {
                <tr class="row">
                    <td class="col-1">@dO.Title</td>
                    <td class="col-1">@dO.Description</td>
                    <td class="col-1">@dO.DueDate</td>
                    <td class="col-1">@dO.Done</td>
                    <td class="col-1"><a asp-action="DO" asp-route-id="@dO.Id">@(dO.Done ? "UnDO" : "DO")</a></td>
                    <td class="col-1"><a asp-action="Update" asp-route-id="@dO.Id">Update</a></td>
                    <td class="col-1"><a asp-action="Delete" asp-route-id="@dO.Id">Delete</a></td>
                </tr>
            }
            <button><a asp-action="Create">New DO</a></button>
        </tbody>
    </table>
    </li>
</div>